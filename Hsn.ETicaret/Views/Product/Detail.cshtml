@model Hsn.ETicaret.Core.Model.Entity.Product
@{
    ViewBag.Title = "Ürün Detayı";
}
<h2>Ürün Detayı</h2>
<div class="productBox">
    <p class="title">@Model.Name</p> <br />
    <img src="@Model.ImageUrl" />
    <p>
        @Model.Brand
    </p>
    <p>
        @Model.Price.ToString("##,##") TL
    </p>
    <p>
        @Model.Description
    </p>

    <a href="#" class="btn btn-default"><i class="icon-next"></i>Sepete At</a>

</div>

