@model List<Hsn.ETicaret.Core.Model.Entity.Product>
@{
    ViewBag.Title = "Index";
    var category = (Hsn.ETicaret.Core.Model.Entity.Category)ViewBag.category;
}

<h2>Welcome My E-Commerce Page!</h2>
<br />
<h3>@category.Name Kategorisinde ki Ürünler</h3>
@{
    foreach (var item in Model)
    {
        <div class="productBox">
            <p class="title">@item.Name</p> <br />
            <img src="@item.ImageUrl" />
            <p>
                @item.Brand
            </p>
            <p>
                @item.Price.ToString("##,##") TL
            </p>
            <p>
                @item.Description
            </p>
            <a href="/Urun/@item.Name.Replace(" ","-")/@item.Id" class="btn btn-success">İncele</a>
            <a href="#" class="btn btn-default"><i class="icon-next"></i>Sepete At</a>

        </div>

    }
    <div class="row"></div>
    <style>
        .productBox {
            width: 200px;
            float: left;
            margin: 10px;
            border: 2px solid #808080;
            padding: 10;
            text-align: center;
        }

            .productBox img {
                width: 100%;
            }

            .productBox title {
                font-weight: bold;
            }

            .productBox p {
                text-align: center;
            }
    </style>
}
